# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
# Database type: Must be 'mssql' (SQL Server only)
DB_TYPE=mssql

# SQL Server Configuration (Local Development)
# Use local SQL Server instance for development and testing
MSSQL_HOST=localhost
MSSQL_PORT=1433
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrong@Passw0rd
MSSQL_DB=business_manager
MSSQL_ENCRYPT=false
MSSQL_TRUST_CERT=true

# Production SQL Server Configuration (Azure SQL Database)
# Uncomment and configure for production deployment:
# MSSQL_HOST=your-server.database.windows.net
# MSSQL_PORT=1433
# MSSQL_USER=your-admin-user
# MSSQL_PASSWORD=YourAzurePassword
# MSSQL_DB=business_manager
# MSSQL_ENCRYPT=true
# MSSQL_TRUST_CERT=false

# Legacy Database Configurations (Not Used - SQL Server Only)
# MySQL Configuration (legacy - not used)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=saas_platform
# MYSQL_USER=root
# MYSQL_PASSWORD=

# PostgreSQL Configuration (legacy - not used)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=business_manager
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password

# Authentication Configuration
# Choose authentication type: 'custom' or 'azure_ad_b2c'
AUTH_TYPE=custom

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
PASSWORD_RESET_TOKEN_MINUTES=60
COMPANY_DOMAIN_SUFFIX=example.local
PASSWORD_RESET_URL_BASE=http://localhost:5173
COMPANY_INVITE_ACCEPT_URL_BASE=http://localhost:5173
COMPANY_INVITE_EXPIRY_DAYS=7
COMPANY_INVITE_DEFAULT_SEAT_LIMIT=50
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=no-reply@businessmanager.local

# Azure AD B2C Configuration
AZURE_AD_B2C_TENANT_ID=
AZURE_AD_B2C_CLIENT_ID=
AZURE_AD_B2C_CLIENT_SECRET=
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
AZURE_AD_B2C_REDIRECT_URI=http://localhost:3001/api/azure-ad-b2c/callback
AZURE_AD_B2C_POST_LOGOUT_REDIRECT_URI=http://localhost:5173
AZURE_AD_B2C_SCOPES=openid,profile,email

# PayFast Configuration
PAYMENTS_ENABLE_MOCK=true
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=
PAYFAST_PASSPHRASE=
PAYFAST_SANDBOX=true
PAYFAST_RETURN_URL=
PAYFAST_CANCEL_URL=
PAYFAST_NOTIFY_URL=
PAYFAST_DISABLE_IP_CHECK=false

# App Domain Configuration
APP_DOMAIN=businessmanager.local

# File Storage Configuration
# Choose storage type: 'database' or 'azure_blob'
STORAGE_TYPE=database

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER_NAME=business-manager-files
